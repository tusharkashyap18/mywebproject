<body>
   <div class="fixed-action-btn">
    <a href="/stories/add" class="btn-floating btn-large waves-effect waves-light red"><i class="fas fa-plus"></i></a>
 </div>
    <nav class="grey darken-3">
        <div class="nav-wrapper container">
            <a href="/dashboard" class="brand-logo center">The ScoopBook</a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger show-on-large"><i class="fas fa-bars"></i></a>
            <ul class="sidenav" id="mobile-demo">
                <li><a href="/dashboard">Dashboard</a></li>
               <li><a href="/stories/my-story">My Stories</a></li> 
                <li><a href="/stories/add">Add a New Story</a></li>
                <li><a href="/auth/logout">Logout</a></li>
            </ul>
        </div>
    </nav>
<div class="container">
    
   <div class="parent-wrapper flex-col">
        <div class="heading"> <h3>Dashboard</h3> </div>  
        <div class="flex-row">
            <div class="name">Welcome, <%= name %> </div>
        </div>
    </div>

        <center><p><b>All Stories</b></p></center>
    <% if(stories.length==0) { %>
        <p>No stories have been created.</p>
    <% } %>
    <% if(stories.length>0) { %>
        <table class="striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Created</th>
                    <th>Status</th>
                    <th>Author</th>                  
                </tr>
            </thead>
            <tbody>
        <% for(var i=0;i<stories.length; i++) { %>
            <% story=stories[i]; %>
            <tr>
                <td> <b><a href="/stories/view/<%=story._id%>"><%= story.title %></a></b> </td>
                <td> <p> <%= story.createdAt %></p> </td>
                <td><span class="dash-status"><%= story.status %></td>
                <td><b><%= story.user.displayName %></b></td>
            </tr>
      <% } %>
            </tbody>
            </table>
         <% } %> 
    

</div>
